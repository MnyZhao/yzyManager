<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.idolmedia.yzymanager.viewmodel.order.OrderManagerViewModel" />
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:orientation="vertical">

        <include layout="@layout/include_title_bar"
            android:id="@+id/title_bar"
            app:titleBar="@{viewModel.titleBar}"/>

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_screen"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:includeFontPadding="false"
                    android:layout_marginTop="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingEnd="26dp"
                    android:paddingStart="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/ic_screen"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintTop_toTopOf="@id/tv_screen"
                    app:layout_constraintEnd_toEndOf="@id/tv_screen"
                    app:layout_constraintBottom_toBottomOf="@id/tv_screen"/>

                <View
                    android:id="@+id/view_search_bg"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="64dp"
                    android:background="@drawable/shape_order_search_bg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_screen"
                    app:layout_constraintBottom_toBottomOf="@id/tv_screen"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:gravity="center_vertical|start"
                    android:hint="输入搜索内容"
                    android:text="@={viewModel.strSearchWord}"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:background="@null"
                    android:imeOptions="actionSearch"
                    app:layout_constraintStart_toStartOf="@id/view_search_line"
                    app:layout_constraintTop_toTopOf="@id/tv_screen"
                    app:layout_constraintBottom_toBottomOf="@id/tv_screen"
                    app:layout_constraintEnd_toEndOf="@id/view_search_bg"/>

                <View
                    android:id="@+id/view_search_line"
                    android:layout_width="1dp"
                    android:layout_height="22dp"
                    android:background="#dcdcdc"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/tv_search_type"
                    app:layout_constraintTop_toTopOf="@id/view_search_bg"
                    app:layout_constraintBottom_toBottomOf="@id/view_search_bg"/>

                <com.idolmedia.yzymanager.widget.BoldTextView
                    android:id="@+id/tv_search_type"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center"
                    tools:text="商品ID"
                    android:text="@{viewModel.strFilterType}"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:paddingEnd="16dp"
                    android:paddingStart="12dp"
                    android:onClick="@{viewModel::onClickFilterType}"
                    app:layout_constraintStart_toStartOf="@id/view_search_bg"
                    app:layout_constraintTop_toTopOf="@id/view_search_bg"
                    app:layout_constraintBottom_toBottomOf="@id/view_search_bg"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_switch_round_down"
                    app:layout_constraintTop_toTopOf="@id/tv_search_type"
                    app:layout_constraintEnd_toEndOf="@id/tv_search_type"
                    app:layout_constraintBottom_toBottomOf="@id/tv_search_type"/>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_marginTop="10dp"
                    app:tabTextColor="#333333"
                    app:tabMode="scrollable"
                    app:tabIndicatorColor="@color/check"
                    app:tabTextAppearance="@style/TabLayoutTextStyle"
                    app:tabIndicator="@drawable/shape_tab_indicator"
                    app:tabSelectedTextColor="@color/check"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_search"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tab_layout"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tab_layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cons_more"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@color/white">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_reset">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_order_start_time"
                            android:layout_width="140dp"
                            android:layout_height="40dp"
                            android:layout_margin="14dp"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            tools:text="下单开始时间"
                            android:text="@{viewModel.strOrderStartTime}"
                            android:onClick="@{()->viewModel.onClickShowPicker(tvOrderStartTime,0)}"
                            android:background="@drawable/shape_gray_bg_5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#eeeeee"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintTop_toTopOf="@id/tv_order_start_time"
                            app:layout_constraintBottom_toBottomOf="@id/tv_order_start_time"
                            app:layout_constraintStart_toEndOf="@id/tv_order_start_time"
                            app:layout_constraintEnd_toStartOf="@id/tv_order_end_time"/>

                        <TextView
                            android:id="@+id/tv_order_end_time"
                            android:layout_width="140dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="14dp"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            tools:text="下单结束时间"
                            android:text="@{viewModel.strOrderEndTime}"
                            android:onClick="@{()->viewModel.onClickShowPicker(tvOrderStartTime,1)}"
                            android:background="@drawable/shape_gray_bg_5"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_order_start_time"/>

                        <TextView
                            android:id="@+id/tv_pay_start_time"
                            android:layout_width="140dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="14dp"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            tools:text="支付开始时间"
                            android:text="@{viewModel.strPayStartTime}"
                            android:onClick="@{()->viewModel.onClickShowPicker(tvOrderStartTime,2)}"
                            android:background="@drawable/shape_gray_bg_5"
                            app:layout_constraintStart_toStartOf="@id/tv_order_start_time"
                            app:layout_constraintTop_toBottomOf="@id/tv_order_start_time"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#eeeeee"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintTop_toTopOf="@id/tv_pay_start_time"
                            app:layout_constraintBottom_toBottomOf="@id/tv_pay_start_time"
                            app:layout_constraintStart_toEndOf="@id/tv_pay_start_time"
                            app:layout_constraintEnd_toStartOf="@id/tv_pay_end_time"/>

                        <TextView
                            android:id="@+id/tv_pay_end_time"
                            android:layout_width="140dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="14dp"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            tools:text="下单结束时间"
                            android:text="@{viewModel.strPayEndTime}"
                            android:onClick="@{()->viewModel.onClickShowPicker(tvOrderStartTime,3)}"
                            android:background="@drawable/shape_gray_bg_5"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_pay_start_time"/>

                        <TextView
                            android:id="@+id/tv_commodity_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:layout_marginStart="18dp"
                            android:text="商品名称"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_pay_start_time"/>

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:background="@null"
                            android:hint="请输入商品名称"
                            android:text="@={viewModel.strCommodityName}"
                            android:paddingStart="20dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingEnd="18dp"
                            android:singleLine="true"
                            app:layout_constraintStart_toEndOf="@id/tv_commodity_name"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_commodity_name"
                            app:layout_constraintBottom_toBottomOf="@id/tv_commodity_name"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="@color/line_color"
                            android:layout_marginStart="18dp"
                            android:layout_marginEnd="18dp"
                            android:layout_marginTop="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_commodity_name"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/tv_commodity_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:text="商品ID"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="@id/tv_commodity_name"
                            app:layout_constraintTop_toBottomOf="@id/tv_commodity_name"/>

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:background="@null"
                            android:hint="请输入商品ID"
                            android:text="@={viewModel.strCommodityId}"
                            android:paddingStart="20dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingEnd="18dp"
                            android:singleLine="true"
                            app:layout_constraintStart_toEndOf="@id/tv_commodity_id"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_commodity_id"
                            app:layout_constraintBottom_toBottomOf="@id/tv_commodity_id"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="@color/line_color"
                            android:layout_marginStart="18dp"
                            android:layout_marginEnd="18dp"
                            android:layout_marginTop="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_commodity_id"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/tv_user_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:text="用户ID"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="@id/tv_commodity_name"
                            app:layout_constraintTop_toBottomOf="@id/tv_commodity_id"/>

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:background="@null"
                            android:hint="请输入用户ID"
                            android:text="@={viewModel.strUserId}"
                            android:paddingStart="20dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingEnd="18dp"
                            android:singleLine="true"
                            app:layout_constraintStart_toEndOf="@id/tv_user_id"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_user_id"
                            app:layout_constraintBottom_toBottomOf="@id/tv_user_id"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="@color/line_color"
                            android:layout_marginStart="18dp"
                            android:layout_marginEnd="18dp"
                            android:layout_marginTop="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_user_id"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:text="用户名称"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="@id/tv_commodity_name"
                            app:layout_constraintTop_toBottomOf="@id/tv_user_id"/>

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:background="@null"
                            android:hint="请输入用户名称"
                            android:text="@={viewModel.strUserName}"
                            android:paddingStart="20dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingEnd="18dp"
                            android:singleLine="true"
                            app:layout_constraintStart_toEndOf="@id/tv_user_name"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_user_name"
                            app:layout_constraintBottom_toBottomOf="@id/tv_user_name"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="@color/line_color"
                            android:layout_marginStart="18dp"
                            android:layout_marginEnd="18dp"
                            android:layout_marginTop="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_user_name"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/tv_express_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:text="收货人名称"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="@id/tv_user_name"
                            app:layout_constraintTop_toBottomOf="@id/tv_user_name"/>

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:background="@null"
                            android:hint="请输入收货人名称"
                            android:text="@={viewModel.strConsigneeName}"
                            android:paddingStart="20dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingEnd="18dp"
                            android:singleLine="true"
                            app:layout_constraintStart_toEndOf="@id/tv_express_name"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_express_name"
                            app:layout_constraintBottom_toBottomOf="@id/tv_express_name"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="@color/line_color"
                            android:layout_marginStart="18dp"
                            android:layout_marginEnd="18dp"
                            android:layout_marginTop="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_express_name"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/tv_express_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:text="收货人电话"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="@id/tv_user_name"
                            app:layout_constraintTop_toBottomOf="@id/tv_express_name"/>

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:background="@null"
                            android:hint="请输入收货人电话"
                            android:text="@={viewModel.strConsigneePhone}"
                            android:paddingStart="20dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingEnd="18dp"
                            android:singleLine="true"
                            android:inputType="phone"
                            app:layout_constraintStart_toEndOf="@id/tv_express_phone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_express_phone"
                            app:layout_constraintBottom_toBottomOf="@id/tv_express_phone"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="@color/line_color"
                            android:layout_marginStart="18dp"
                            android:layout_marginEnd="18dp"
                            android:layout_marginTop="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_express_phone"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/tv_order_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:text="订单编号"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="@id/tv_user_name"
                            app:layout_constraintTop_toBottomOf="@id/tv_express_phone"/>

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:background="@null"
                            android:hint="请输入订单编号"
                            android:text="@={viewModel.strOrderNumber}"
                            android:paddingStart="20dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingEnd="18dp"
                            android:singleLine="true"
                            app:layout_constraintStart_toEndOf="@id/tv_order_number"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_order_number"
                            app:layout_constraintBottom_toBottomOf="@id/tv_order_number"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="@color/line_color"
                            android:layout_marginStart="18dp"
                            android:layout_marginEnd="18dp"
                            android:layout_marginTop="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_order_number"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/tv_express_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="30dp"
                            android:text="快递编号"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="@id/tv_user_name"
                            app:layout_constraintTop_toBottomOf="@id/tv_order_number"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:background="@null"
                            android:hint="请输入快递编号"
                            android:text="@={viewModel.strExpressNumber}"
                            android:paddingStart="20dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingEnd="18dp"
                            android:singleLine="true"
                            app:layout_constraintStart_toEndOf="@id/tv_express_number"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_express_number"
                            app:layout_constraintBottom_toBottomOf="@id/tv_express_number"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.core.widget.NestedScrollView>

                <com.idolmedia.yzymanager.widget.BoldTextView
                    android:id="@+id/tv_reset"
                    android:layout_width="94dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="@string/str_reset"
                    android:onClick="@{viewModel::onClickReset}"
                    android:background="@drawable/shape_line_gray_bg_50"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_confirm"/>

                <com.idolmedia.yzymanager.widget.BoldTextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="94dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="@string/str_confirm"
                    android:textColor="@color/check"
                    android:background="@drawable/shape_line_blue_50"
                    app:layout_constraintStart_toEndOf="@id/tv_reset"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_reset"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.drawerlayout.widget.DrawerLayout>

    </LinearLayout>
</layout>
