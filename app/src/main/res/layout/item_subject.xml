<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="item"
            type="com.idolmedia.yzymanager.viewmodel.subject.ItemSubjectBean" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            tools:text="专题ID：12345"
            android:text="@{item.strId}"
            android:textColor="@color/black"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/view_line_1"/>

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:padding="7dp"
            android:src="@mipmap/ic_copy"
            android:onClick="@{item::onClickCopy}"
            app:layout_constraintStart_toEndOf="@id/tv_id"
            app:layout_constraintTop_toTopOf="@id/tv_id"
            app:layout_constraintBottom_toBottomOf="@id/tv_id"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            tools:text="海外商品合并-专题"
            android:text="@{item.strTitle}"
            android:textColor="@color/black"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="@id/tv_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_id"/>

        <View
            android:id="@+id/view_line_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="45dp"
            android:background="@color/line_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="28dp"
            tools:src="@mipmap/ic_launcher"
            glideAll="@{item.strImg}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/view_line_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/line_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_img"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="50dp"
            android:layout_height="22dp"
            android:gravity="center"
            android:textSize="12sp"
            tools:text="@string/str_shelves_down"
            android:text="@{item.strUpStatus}"
            android:textColor="@color/check"
            android:onClick="@{item::onClickDown}"
            android:background="@drawable/shape_line_blue_bg_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_line_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_2"/>

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="60dp"
            android:layout_height="22dp"
            android:gravity="center"
            android:textSize="12sp"
            android:text="@string/str_setting_sort"
            android:textColor="@color/check"
            android:onClick="@{item::onClickSettingSort}"
            android:background="@drawable/shape_line_blue_bg_5"
            app:layout_constraintStart_toEndOf="@id/tv_1"
            app:layout_constraintBottom_toBottomOf="@id/tv_1"
            app:layout_constraintEnd_toStartOf="@id/tv_3"/>

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="90dp"
            android:layout_height="22dp"
            android:gravity="center"
            android:textSize="12sp"
            android:text="设置商品排序"
            android:textColor="@color/check"
            android:onClick="@{item::onClickCommoditySettingSort}"
            android:background="@drawable/shape_line_blue_bg_5"
            app:layout_constraintStart_toEndOf="@id/tv_2"
            app:layout_constraintBottom_toBottomOf="@id/tv_1"
            app:layout_constraintEnd_toStartOf="@id/tv_4"/>

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="50dp"
            android:layout_height="22dp"
            android:gravity="center"
            android:textSize="12sp"
            android:text="@string/str_edit"
            android:textColor="@color/check"
            android:onClick="@{item::onClickEdit}"
            android:background="@drawable/shape_line_blue_bg_5"
            app:layout_constraintStart_toEndOf="@id/tv_3"
            app:layout_constraintBottom_toBottomOf="@id/tv_1"
            app:layout_constraintEnd_toStartOf="@id/tv_5"/>

        <TextView
            android:id="@+id/tv_5"
            android:layout_width="50dp"
            android:layout_height="22dp"
            android:gravity="center"
            android:textSize="12sp"
            android:text="@string/str_delete"
            android:textColor="@color/check"
            android:onClick="@{item::onClickDelete}"
            android:background="@drawable/shape_line_blue_bg_5"
            app:layout_constraintStart_toEndOf="@id/tv_4"
            app:layout_constraintBottom_toBottomOf="@id/tv_1"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="15dp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="威神V全新专辑威神V全新专辑威神V全新专辑"
            android:text="@{item.strName}"
            android:textColor="@color/black"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="@id/iv_img"
            app:layout_constraintStart_toEndOf="@id/iv_img"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_classify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            tools:text="分类：黄旭熙"
            android:text="@{item.strClassify}"
            android:textColor="@color/black"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintStart_toStartOf="@id/tv_name"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            tools:text="商品价格：￥299.0"
            android:text="@{item.strPrice}"
            android:textColor="@color/black"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/tv_classify"
            app:layout_constraintStart_toStartOf="@id/tv_name"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
